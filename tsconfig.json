{
    "compilerOptions": {
        "target": "esnext",
        "jsx": "preserve",
        "lib": [
            "esnext",
            "dom"
        ],
        "useDefineForClassFields": true,
        "baseUrl": "./",
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "types": [
            "vite/client"
        ],
        "strict": true,
        "noUnusedLocals": true,
        "sourceMap": true,
        "esModuleInterop": true
    },
    "include": [
        "packages/**/*.ts",
        "packages/**/*.d.ts",
        "packages/**/*.tsx",
        "packages/**/*.vue",
        "packages/**/*.js",
        "*.json"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "*.md"
    ]
}